#########################
# Corpus API / Auth
#########################
[corpus]
# base URL for Corpus API (no trailing slash)
base_url = "https://api.corpus.swecha.org/api/v1"

# When true, the app uses Corpus API. When false, app stores data locally in data/*.json
use_api = true

# Endpoints (relative to base_url). Update to match your Corpus docs if they differ.
send_otp_endpoint = "auth/send-otp"
verify_otp_endpoint = "auth/verify-otp"

# Endpoints for collections (adjust per your API)
places_endpoint = "collections/places"
feedback_endpoint = "collections/feedback"
itineraries_endpoint = "collections/itineraries"

# If you already have an access_token (from Swagger), put it here to skip OTP auth.
# If present, app will use this token directly.
access_token = ""

#########################
# AI / Hugging Face (optional)
#########################
[ai]
use_hf_inference = false
hf_api_key = ""
model_name = "google/flan-t5-small"

#########################
# App UI
#########################
app_name = "Telangana Tourist Guide"
